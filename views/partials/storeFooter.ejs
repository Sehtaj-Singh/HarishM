<footer class="site-footer">
  <style>
    .footer-logo{
      height: 2.5vh;
      
    }
    .site-footer {
      background: #ffffff;
      color: #323a40;
      padding: 2rem 1rem;
      font-family: "Arial", sans-serif;
    }

    .footer-top {
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 1px solid #ccc;
      padding-bottom: 1rem;
      margin-top: 2vh;
    }
    .footer-address span{
      font-size: 1.3rem;
      font-family: 'Arsenal', sans-serif;
      font-weight: 600;
      letter-spacing: 1px;
      color: #192f49;
    }
    .footer-address p{
      font-size: large;
      margin-top: 5px;
      font-weight: 400;
    }

  
    .footer-socials span {
      margin-right: 0.5rem;
      font-family: "Alice", serif;
      color: #323a40;
    }
    .footer-socials a {
      margin-left: 0.5rem;
      color: #192f49;
      font-size: 1.2rem;
      transition: color 0.3s;
    }
    .footer-socials a:hover {
      color: #0077cc;
    }

    /* Accordion */
    .footer-accordion {
      margin-top: 1rem;
    }
    .accordion-item {
      border-bottom: 1px solid #ddd;
    }
    .accordion-header {
      width: 100%;
      background: none;
      border: none;
      outline: none;
      font-family: "Alice", serif;
      padding: 0.8rem;
      text-align: left;
      font-size: 1rem;
      color: #192f49;
      display: flex;
      justify-content: space-between;
      align-items: center;
      cursor: pointer;
    }
    .accordion-header i {
      transition: transform 0.3s ease;
    }
    .accordion-item.active .accordion-header i {
      transform: rotate(180deg);
    }
    .accordion-content {
      max-height: 0;
      overflow: hidden;
      font-family: "Alice", serif;
      transition: max-height 0.4s ease, padding 0.4s ease;
      padding: 0 0.8rem;
      color: #323a40;
    }
    .accordion-item.active .accordion-content {
      max-height: 200px;
      padding: 0.8rem;
    }

    /* Payment */
    .footer-payment {
      margin-top: 1rem;
      color: #323a40;
    }
    .footer-payment span {
      display: block;
      margin-bottom: 0.5rem;
      color: #192f49;
      font-size: 1.3rem;
      font-family: 'Arsenal', sans-serif;
      font-weight: 600;
      letter-spacing: 1px;
    }
    .footer-payment img {
      width: 40px;
      margin-right: 10px;
      filter: grayscale(100%);
      transition: transform 0.3s, filter 0.3s;
    }
    .footer-payment img:hover {
      filter: none;
      transform: scale(1.1);
    }

    /* Address */
    .footer-address {
      margin-top: 1rem;
      font-size: 0.9rem;
      color: #323a40;
    }

    /* Bottom */
    .footer-bottom {
      margin-top: 1.5rem;
      text-align: center;
      font-family: 'Arsenal', sans-serif;
      font-size: 0.8rem;
      border-top: 1px solid #ccc;
      padding-top: 0.8rem;
      color: #323a40;
      font-weight: 600;
      letter-spacing: 1px;
    }
  </style>

  

   

  <div class="footer-accordion">
    <div class="accordion-item">
      <button class="accordion-header">
        Return Policy <i class="fas fa-chevron-down"></i>
      </button>
      <div class="accordion-content">
        <p>Content for return policy...</p>
      </div>
    </div>

    <div class="accordion-item">
      <button class="accordion-header">
        Privacy Policy <i class="fas fa-chevron-down"></i>
      </button>
      <div class="accordion-content">
        <p>Content for privacy policy...</p>
      </div>
    </div>

    <div class="accordion-item">
      <button class="accordion-header">
        Terms & Conditions <i class="fas fa-chevron-down"></i>
      </button>
      <div class="accordion-content">
        <p>Content for terms & conditions...</p>
      </div>
    </div>

    <div class="accordion-item">
      <button class="accordion-header">
        Cookie Policy <i class="fas fa-chevron-down"></i>
      </button>
      <div class="accordion-content">
        <p>Content for cookie policy...</p>
      </div>
    </div>

    <div class="accordion-item">
      <button class="accordion-header">
        Help & Support <i class="fas fa-chevron-down"></i>
      </button>
      <div class="accordion-content">
        <p>Content for help & support...</p>
      </div>
    </div>

    <div class="accordion-item">
      <button class="accordion-header">
        FAQ <i class="fas fa-chevron-down"></i>
      </button>
      <div class="accordion-content">
        <p>Content for FAQ...</p>
      </div>
    </div>
  </div>

  

  <div class="footer-top">
    <img class="footer-logo" src="/images/cardLogo1.png" />
    <div class="footer-socials">
      <span>Follow us:</span>
      <a href="#"><i class="fab fa-facebook"></i></a>
      <a href="#"><i class="fab fa-instagram"></i></a>
    </div>
  </div>

  <div class="footer-address">
    <span>Registered Shop:<br><p> 128, Sant Nagar, Sirsa, Haryana, 125075</p></span>
  </div>

  <div class="footer-payment">
    <span>Payment Methods:</span>
    <img src="/images/payments/visa.png" alt="Visa" />
    <img src="/images/payments/mastercard.png" alt="Mastercard" />
    <img src="/images/payments/upi.png" alt="UPI" />
    <img src="/images/payments/wallet.png" alt="Wallet" />
  </div>

 

  <div class="footer-bottom">
    <p>Â© <span id="year"></span> Harish Mobile. All rights reserved.</p>
  </div>

  <script>
    // Dynamic year
    document.getElementById("year").textContent = new Date().getFullYear();

    // Accordion logic
    document.querySelectorAll(".accordion-header").forEach((header) => {
      header.addEventListener("click", () => {
        const item = header.parentElement;
        const allItems = document.querySelectorAll(".accordion-item");
        allItems.forEach((i) => {
          if (i !== item) i.classList.remove("active");
        });
        item.classList.toggle("active");
      });
    });
  </script>
</footer>
