<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/auth1.css" />

    <title>Forgot Password</title>
  </head>
  <body>
    <div id="box-up">
      <div id="up-t"></div>
      <div id="up-t2"></div>
    </div>

    <main id="login-wrap">
      <h1 id="title">Forgot Password</h1>
      <form class="input" method="POST" action="/forgot-password">
        <div id="go-back">
          <a id="back" href="/login">Login</a>
          <a id="back" href="/user/register">Register</a>
        </div>
        <div class="inputGroup">
          <input type="text" name="loginId" placeholder=" " required />
          <label>Email or Phone</label>
        </div>

        <% if (error) { %>
        <p id="error" class="error" style="color: red"><%= error %></p>
        <% } %>

        <input id="submit" type="submit" value="Next" />
      </form>
    </main>

    <div id="box-down">
      <div id="down-t"></div>
      <div id="down-t2"></div>
      <div id="down-t3"></div>
      <div id="down-t4"></div>
    </div>
  </body>
</html>
