<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>HRstore</title>

    <link rel="stylesheet" href="css/store.css" />
    <link rel="stylesheet" href="css/storeHeader.css" />
    <script
      src="https://kit.fontawesome.com/3a523928fc.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <script src="javascript/store.js"></script>
    <%- include(`../../partials/storeHeader`) %>

    

    <div id="store-wrapper">
      <div id="slider">
        <!-- ðŸ”¹ New Mobiles Section -->
        <section class="store-section" id="new-mobile-section">
          <div class="image-new">
            <i
              class="fa-solid fa-chevron-left nav-icon left-icon"
              data-dir="left"
            ></i>
            
            <i
              class="fa-solid fa-chevron-right nav-icon right-icon"
              data-dir="right"
            ></i>
          </div>

         
          <div class="CardSection">
            <% registeredNmobile.forEach(function(Nmobile) { %>
            <div class="MobileCard">
              <a
                class="detailsOverlay"
                href="/New/Details/<%= Nmobile._id %>?from=store"
                >details</a
              >

              <img class="cardLogo" src="/images/cardLogo1.png" />
              <div class="statusBadge">New</div>

              <div class="cardContent">
                <div class="cardImage">
                  <img
                    src="/uploads/<%= Nmobile.Nimage %>"
                    alt="<%= Nmobile.Nname %>"
                  />
                </div>
                <div class="cardDetails">
                  <h3 class="mobileName"><%= Nmobile.Nname %></h3>
                  <div class="priceRow">
                    <p class="mrp">
                      <span class="mrpLabel">MRP:</span>
                      <span class="mrpValue"><s>â‚¹<%= Nmobile.Nmrp %></s></span>
                    </p>
                    <span class="price">â‚¹<%= Nmobile.Nprice %></span>
                  </div>
                  <span class="discount"><%= Nmobile.Ndiscount %>% OFF</span>
                  <div class="priceBuy">
                    <button class="cartBtn">Add To Cart</button>
                    <button class="buyBtn">
                      <i class="fas fa-shopping-bag"></i> Buy
                    </button>
                  </div>
                </div>
              </div>
            </div>
            <% }) %>
          </div>
        </section>
        
        <link href="https://fonts.googleapis.com/css2?family=Alfa+Slab+One&display=swap" rel="stylesheet">


        <!-- ðŸ”¹ Refurbished Mobiles Section -->
        <section class="store-section" id="refurbished-section">
          
          <!-- <p id="below-head">Refurbhished</p> -->
          <div class="image-refurb">
            <i
              class="fa-solid fa-chevron-left nav-icon left-icon"
              data-dir="left"
            ></i>
            
           
            <i
              class="fa-solid fa-chevron-right nav-icon right-icon"
              data-dir="right"
            ></i>
          </div>

          
          <div class="CardSection">
            <% registeredSHmobile.forEach(function(SHmobile) { %>
            <div class="MobileCard">
              <a
                class="detailsOverlay"
                href="/Second-Hand/Details/<%= SHmobile._id %>?from=store"
                >details</a
              >

              <img class="cardLogo" src="/images/cardLogo1.png" />
              <div class="statusBadge">Used</div>

              <div class="cardContent">
                <div class="cardImage">
                  <img
                    src="/uploads/<%= SHmobile.SHimage %>"
                    alt="<%= SHmobile.SHname %>"
                  />
                </div>
                <div class="cardDetails">
                  <h3 class="mobileName"><%= SHmobile.SHname %></h3>
                  <p class="condition">Condition: <%= SHmobile.condition %></p>
                  <div class="priceRow">
                    <p class="mrp">
                      <span class="mrpLabel">MRP:</span>
                      <span class="mrpValue"
                        ><s>â‚¹<%= SHmobile.SHmrp %></s></span
                      >
                    </p>
                    <span class="price">â‚¹<%= SHmobile.SHprice %></span>
                  </div>
                  <span class="discount"><%= SHmobile.SHdiscount %>% OFF</span>
                  <div class="priceBuy">
                    <button class="cartBtn">Add To Cart</button>
                    <button class="buyBtn">
                      <i class="fas fa-shopping-bag"></i> Buy
                    </button>
                  </div>
                </div>
              </div>
            </div>
            <% }) %>
          </div>
        </section>

        <!-- ðŸ”¹ Accessories Section -->
        <section class="store-section" id="accessory-section">
          <div class="image-accessory">
            <i
              class="fa-solid fa-chevron-left nav-icon left-icon"
              data-dir="left"
            ></i>
           
            <i
              class="fa-solid fa-chevron-right nav-icon right-icon"
              data-dir="right"
            ></i>
          </div>

          <div class="CardSection">
            <% registeredAmobile.forEach(function(accessory) { %>
            <div class="MobileCard">
              <a
                class="detailsOverlay"
                href="/Accessory/Details/<%= accessory._id %>?from=store"
                >details</a
              >

              <img class="cardLogo" src="/images/cardLogo1.png" />
              <div class="statusBadge">New</div>

              <div class="cardContent">
                <div class="cardImage">
                  <img
                    src="/uploads/<%= accessory.Aimage %>"
                    alt="<%= accessory.Aname %>"
                  />
                </div>
                <div class="cardDetails">
                  <h3 class="mobileName"><%= accessory.Aname %></h3>
                  <div class="priceRow">
                    <p class="mrp">
                      <span class="mrpLabel">MRP:</span>
                      <span class="mrpValue"
                        ><s>â‚¹<%= accessory.Amrp %></s></span
                      >
                    </p>
                    <span class="price">â‚¹<%= accessory.Aprice %></span>
                  </div>
                  <span class="discount"><%= accessory.Adiscount %>% OFF</span>
                  <div class="priceBuy">
                    <button class="cartBtn">Add To Cart</button>
                    <button class="buyBtn">
                      <i class="fas fa-shopping-bag"></i> Buy
                    </button>
                  </div>
                </div>
              </div>
            </div>
            <% }) %>
          </div>
        </section>
      </div>
    </div>
  </body>
</html>
